<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/custom_adapter_row_iv_product_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/custom_adapter_row_tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/custom_adapter_row_iv_product_image"
        android:layout_toEndOf="@+id/custom_adapter_row_iv_product_image"
        android:layout_toRightOf="@+id/custom_adapter_row_iv_product_image"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/custom_adapter_row_tv_saving_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/custom_adapter_row_tv_product_name"
        android:layout_alignStart="@+id/custom_adapter_row_tv_product_name"
        android:layout_below="@+id/custom_adapter_row_tv_product_name"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Switch
        android:id="@+id/custom_adapter_row_sw_pause_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/custom_adapter_row_iv_product_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:checked="true"
        android:padding="10dp" />

</RelativeLayout>

